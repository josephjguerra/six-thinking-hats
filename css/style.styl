$white        = #ffffff - 10
$black        = #000000 + 60
$light-blue   = #348fd4
$dark-blue    = #043356
$light-green  = #4CAF50
$dark-green   = #0d2f10
$light-yellow = #FFF59D
$dark-yellow  = #756b14
$light-red    = #cc4037
$dark-red     = #4c0d09

*
  // border 1px solid $light-red

*, *:before, *:after
  box-sizing border-box

body
  background $white
  font normal 1em/1.5 Lato, sans-serif
  // font normal 1em/1.5 "Helvetica Neue", sans-serif
  text-align center
  margin 0
  padding 0

a
  text-decoration none
  color inherit
  font-weight 700
  &:hover
    text-decoration underline
  &:visited
    color inherit

nav
  border-bottom 2px solid $black
  background-color $white

nav a
    display inline-block
    padding 10px
    color $black
  .left
    float left
    img
      width 24px
      position relative
      top 6px
      left 6px
  .right
    float right

h1
  font-size 3em
  text-shadow 1px 1px 0 rgba(0,0,0,0.2)

.lead
  font-size 1.3em
  line-height 1.8em
  font-style italic
  width 80%
  margin auto
  span
    padding 4px
    margin 2px
.white2
  background-color $white - 40

.call-to-action
  margin-top 80px

.button
  display inline-block
  font-size 1.3em
  color $black
  border 2px solid $black
  padding 8px 12px
  margin 10px
  border-radius 5px
  &:hover
    color $white
    background-color $black

.hat-image
  width 120px
  margin 10px
  border-radius 5px

h2
  font-size 2em

p, .point
  font-size 1.3em

.learn p
  width 80%
  margin auto
  text-align justify
  margin-top 1.3em

.hat
  padding-top 200px
  padding-bottom 200px

.blue
  color $dark-blue
  background-color $light-blue

.white
  color $black
  background-color $white

.red
  color $dark-red
  background-color $light-red

.yellow
  color $dark-yellow
  background-color $light-yellow

.black
  color $white
  background-color $black

.green
  color $dark-green
  background-color $light-green

.benefits
  p
    text-align justify

.session
  p
    width 80%
    margin auto

input
  width 400px
  height 1.8em
  font-size 1.3em
  text-align center
  margin-right 20px
  border 2px solid $black
  border-radius 5px
  background-color $white + 40

.count
  font-size 1.3em

.blueList,
.whiteList,
.redList,
.yellowList,
.blackList,
.greenList
  width 67%
  margin auto
  text-align left
  padding-bottom 20px

.submitinput
  width 400px
  margin auto
  text-align right

.button-black
  color $white
  border 2px solid $white
  &:hover
    color $black
    background-color $white

#blackInput
  border 2px solid $white

.next
  margin-top 40px

.results
  // border 5px solid black
  display flex
  flex-direction column

.results-group
  // border 2px dashed gray
  display flex
  flex-direction row
  width 100%

.result
  width 100%

table
  text-align left
  border 1px solid $dark-yellow
  border-radius 5px
  margin auto
  img
    width 24px

th, td
  padding 5px

th
  background-color $light-yellow - 30

th:nth-child(2),
th:nth-child(3),
td:nth-child(2),
td:nth-child(3)
  text-align center

tr:nth-child(odd)
  background-color $light-yellow - 10

.clearfix:after
  content ""
  display table
  clear both
  overflow auto

@media screen and (max-width: 900px)
  .results-group
    flex-direction column

@media screen and (max-width: 700px)
  h1
    font-size 2em

  .lead
    font-size 1em

  h2
    font-size 1.67em

  p
    font-size 1em

@media screen and (max-width: 500px)
  .left,
  .right
    float none

  .left
    border-bottom 2px solid $black

  nav
    border-bottom none
    a
      display block

  #home
    padding-top 100px
    clear both

  .submitinput, input
    width 300px
